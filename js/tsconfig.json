{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		// "strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts"]
}